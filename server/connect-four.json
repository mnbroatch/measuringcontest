{
  "entities": [
    {
      "name": "mainGrid",
      "type": "Grid",
      "width": 7,
      "height": 6
    },
    {
      "name": "playerMarker",
      "perPlayer": true,
      "count": "Infinity"
    }
  ],
  "sharedBoard": [{"name": "mainGrid"}],
  "minPlayers": 2,
  "maxPlayers": 2,
  "turn": {
    "minMoves": 1,
    "maxMoves": 1
  },
  "moves": {
    "placePlayerMarker": {
      "type": "MoveEntity",
      "arguments": {
        "entity": {
          "automatic": true,
          "location": "bank", 
          "matcher": {
            "name": "playerMarker",
            "player": "Current"
          }
        },
        "destination": {
          "matcher": { "type": "Space" },
          "conditions": [
            {"type": "IsEmpty"},
            {
              "target": {
                "targetingType": "Relative",
                "location": [0, 1]
              },
              "type": "Not",
              "conditions": [{ "type": "IsEmpty" }]
            }
          ]
        }
      }
    }
  },
  "endIf": [
    {
      "conditions": [{
        "target": { "name": "mainGrid" },
        "type": "ContainsLine",
        "length": 4,
        "spaceGroupConditions": [{
          "type": "ContainsSame",
          "properties": ["player"]
        }],
        "spaceConditions": [{"type": "Contains"}]
      }],
      "result": {
        "winner": [ "conditionResults", 0, "matches", 0, "spaces", 0, "entities", 0, "rule", "player" ]
      }
    },
    {
      "conditions": [{
        "type": "EverySpace",
        "target": { "name": "mainGrid" },
        "spaceConditions": [{"type": "Contains"}]
      }],
      "result": { "draw": true }
    }
  ]
